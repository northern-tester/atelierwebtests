{
   "src_folders":[
      "tests"
   ],
   "output_folder":"reports",
   "custom_commands_path":"lib/",
   "custom_assertions_path":"",
   "page_objects_path":"pageobjects/",
   "globals_path":"./globals.js",
   "selenium":{
      "start_process":true,
      "server_path":"bin/selenium-server-standalone-2.53.1.jar",
      "log_path":"",
      "port":4445,
      "cli_args":{
         "webdriver.chrome.driver":"bin/chromedriver"
      }
   },
   "test_settings":{
      "default":{
         "launch_url":"http://www.testingatelier.community",
         "selenium_port":4445,
         "selenium_host":"localhost",
         "silent":true,
         "screenshots":{
            "enabled":false,
            "path":""
         },
            "desiredCapabilities":{
               "browserName":"chrome",
               "javascriptEnabled":true,
               "acceptSslCerts":true,
               "chromeOptions":{
                  "args": ["headless", "no-sandbox", "disable-gpu"]
               }
            }
         },
      "phantomjs":{
         "launch_url":"www.testingatelier.community",
         "selenium_port":4445,
         "selenium_host":"localhost",
         "silent":true,
         "screenshots":{
         "enabled":false,
         "path":""
         },
            "desiredCapabilities":{
               "browserName":"phantomjs",
               "javascriptEnabled":true,
               "acceptSslCerts":true,
               "phantomjs.binary.path":"bin/phantomjs",
               "phantomjs.cli.args":[
            ]
         }
      }  
   }  
}